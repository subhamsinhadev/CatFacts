<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="subham.sinha.dev.CatFacts">

    <!-- have full network access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/cat"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material.Light"
        android:largeHeap="true"
        android:name="subham.sinha.dev.CatFacts.Applications"
        android:resizeableActivity="true">

        <activity
            android:name="subham.sinha.dev.CatFacts.MainActivity"
            android:label="@string/app_name">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity
            android:name="subham.sinha.dev.CatFacts.DebugActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="android.max_aspect"
            android:value="4.0"/>

    </application>

</manifest>
